{
  "name": "envil",
  "displayName": "envil",
  "description": "live-coding environment using Hydra and Supercollider",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "envil.start",
        "title": "Envil: open environment"
      },
      {
        "command": "envil.stop",
        "title": "Envil: close environment"
      },
      {
        "command": "envil.evaluate.hydra",
        "title": "Envil: evaluate hydra code"
      }
    ]
  },
  "extensionDependencies": [
    "drcika.apc-extension"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jsonc-parser": "^3.2.1",
    "open": "^10.0.4",
    "socket.io": "^4.7.4"
  }
}
