{
  "name": "envil",
  "displayName": "envil",
  "description": "live-coding environment using Hydra and Supercollider",
  "version": "0.0.1",
  "repository": "https://github.com/inspektral/envil",
  "publisher": "killbizz",
  "license": "MIT",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "envil.start",
        "title": "Envil: open environment"
      },
      {
        "command": "envil.stop",
        "title": "Envil: close environment"
      },
      {
        "command": "envil.evaluate.hydra",
        "title": "Envil: evaluate hydra code"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Envil Extension Configuration",
      "properties": {
          "envil.environment.active": {
              "type": "boolean",
              "default": false,
              "description": "A setting to check if the environment is active"
          }
      }
    },
    "keybindings": [
      {
        "command": "envil.evaluate.hydra",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == 'javascript' && envil.environment.active == true",
        "comment": "Evaluate Hydra code in envil environment"
      }
    ]
  },
  "extensionDependencies": [
    "drcika.apc-extension"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jsonc-parser": "^3.2.1",
    "socket.io": "^4.7.4"
  }
}
